<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>signup</servlet-name>
        <servlet-class>mainPkg.signup</servlet-class>
        <init-param>
            <param-name>databaseName</param-name>
            <param-value>ap_project</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>mainPkg.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>askquestion</servlet-name>
        <servlet-class>mainPkg.askquestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>signout</servlet-name>
        <servlet-class>mainPkg.signout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SessionExists</servlet-name>
        <servlet-class>mainPkg.SessionExists</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>requestTopic</servlet-name>
        <servlet-class>mainPkg.requestTopic</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>signup</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>askquestion</servlet-name>
        <url-pattern>/askquestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>signout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SessionExists</servlet-name>
        <url-pattern>/SessionExists</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>requestTopic</servlet-name>
        <url-pattern>/requestTopic</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
